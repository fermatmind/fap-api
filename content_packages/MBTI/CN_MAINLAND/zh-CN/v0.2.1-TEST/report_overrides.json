{
  "schema": "fap.report.overrides.v1",
  "engine": "v1",
  "rules": [
    {
      "id": "hl_estj_action_tone",
      "target": "highlights",
      "priority": 100,

      "match": {
        "type_code": ["ESTJ-A", "ESTJ-T"],
        "item": { "kind": ["action"] }
      },

      "mode": "patch",
      "replace_fields": {
        "title": "行动建议（更适合你）"
      },
      "patch": {
        "text": "行动建议：先把目标拆成 3 个交付节点，然后立刻推进最小一步。"
      }
    },

    {
      "id": "traits_add_card",
      "target": "cards",
      "priority": 50,

      "match": {
        "section": ["traits"]
      },

      "mode": "append",
      "patch": {
        "id": "traits_extra_01",
        "title": "你的小优势",
        "text": "……"
      }
    },

    {
      "id": "reads_replace_one",
      "target": "reads",
      "priority": 10,
      "match": {
        "item": { "id": ["read_03"] }
      },
      "mode": "replace",
      "patch": {
        "id": "read_03",
        "title": "替换后的推荐阅读",
        "url": "https://example.com"
      }
    }
  ]
}