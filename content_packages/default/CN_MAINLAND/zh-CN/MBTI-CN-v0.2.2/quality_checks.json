{
    "version": "2026.01",
    "checks": [
        {
            "id": "min_answers",
            "type": "min_answer_count",
            "params": {
                "min": 144
            }
        },
        {
            "id": "max_same_option",
            "type": "max_same_option_ratio",
            "params": {
                "max_ratio": 0.85
            }
        },
        {
            "id": "reverse_pair_mismatch",
            "type": "reverse_pair_mismatch_ratio",
            "params": {
                "max_ratio": 0.5
            }
        }
    ],
    "grade_rules": {
        "default": "A",
        "downgrade": [
            {
                "grade": "C",
                "if": {
                    "any_failed": [
                        "min_answers"
                    ]
                }
            },
            {
                "grade": "B",
                "if": {
                    "any_failed": [
                        "max_same_option"
                    ]
                }
            },
            {
                "grade": "B",
                "if": {
                    "fail_count_gte": 2
                }
            },
            {
                "grade": "D",
                "if": {
                    "fail_count_gte": 3
                }
            }
        ]
    },
    "schema": "fap.report.rules.v1"
}
